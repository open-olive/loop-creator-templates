import { whisper } from '@oliveai/ldk';

{{ @if (it.isTypeScript) }}
interface Props {
  cursorText{{ it.isTypeScript ? '?: string' : '' }};
}
{{ /if }}

export const onClose = (err{{ it.isTypeScript ? '?: Error' : '' }}) => {
  if (err) {
    console.error('Error closing Cursor Whisper', err);
  }
};

export default {
  show: (cursorText{{ it.isTypeScript ? '?: string' : '' }}) => {
    const components{{ it.isTypeScript ? ': whisper.Component[]' : '' }} = [];

    const message{{ it.isTypeScript ? ': whisper.Message' : '' }} = {
      type: whisper.WhisperComponentType.Message,
      body: cursorText,
    };

    components.push(message);

    return whisper.create({
      components,
      label: 'Cursor Aptitude Fired',
      onClose,
    });
  },
};
